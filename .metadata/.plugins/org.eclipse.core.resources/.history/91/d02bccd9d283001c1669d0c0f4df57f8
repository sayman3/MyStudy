		//1+(-2)+3+(-4)+...과 같은 식으로 계속 더해나갔을 때, 몇까지 더해야 총합이 100이상이 되는지 구하시오.
		
		/*
		int i=0;
		int sum=0;
		while(true) {
			++i;
			
			if(i%2==0) {
				i=i*(-1);
			}			
			sum = sum + i;
			
			if(i<0) {
				i=i*(-1);
			}
			
			if(sum>=100) {
				break;
			}
		}
		System.out.println(sum);
		System.out.println(i);
		*/
		
		int sum = 0; //총합을 저장할 변수
		int s = 1; //부호를 바꿔줄 변수
		int num = 0;
		
		for(int i=1; true; i++,s=-s) {
			num = s* i;
			sum += num;
			
			if(sum>=100)
				break;			
		}
		System.out.println("총합: "+sum+ " num: "+ num);
	}

}
